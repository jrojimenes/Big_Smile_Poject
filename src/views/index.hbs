<main class="index">
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="mb-1">Favorite Links</h1>
            <h3 class="mb-5">
                <em>Store your favorite Website's Links</em>
                
            </h3>
            <a class="btn btn-primary btn-lg" href="/signIn">
                Let's get started
            </a>
        </div>
        <div class="overlay"></div>
</header>


<div class="container p-4">
    <div class="row">
        {{#each promView}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{fcPromotionName}}
                        </h3>
                    </a>
                    <p class="m-2">{{fcDescription}}</p>
                    <p class="text-muted">
                        
                        <img src="{{searchRouteImgRoute fcUrlImage}}">
                    </p>
                    <a class="btn btn-danger" href="/links/delete/{{id}}">
                        Delete Link
                    </a>
                    <a class="btn btn-secondary" href="/links/edit/{{id}}">
                        Edit
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not Links saved yet.</p>
                <a href="/links/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>

</main>